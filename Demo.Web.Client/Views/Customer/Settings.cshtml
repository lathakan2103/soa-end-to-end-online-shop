@{
    ViewBag.Title = "My Settings";
    ViewBag.Name = "Account";
}

<div data-ng-controller="SettingsController">
    <div ng-switch="viewMode">
        <div ng-switch-when="settings">
            <form>
                <div style="margin-top: 60px;"></div>
                @Html.Partial("~/Views/Shared/_ValidationErrors.cshtml")

                <fieldset>
                    <legend>Your account settings</legend>

                    <p class="input-group" style="width: 400px">
                        <span class="input-group-addon" style="width: 140px; text-align: left;">First name:</span>
                        <input type="text" class="form-control" ng-model="settingsModel.FirstName" placeholder="first name" />
                    </p>
                    <p class="input-group" style="width: 400px">
                        <span class="input-group-addon" style="width: 140px; text-align: left;">Last name:</span>
                        <input type="text" class="form-control" ng-model="settingsModel.LastName" placeholder="last name" />
                    </p>
                    <p class="input-group" style="width: 500px">
                        <span class="input-group-addon" style="width: 140px; text-align: left;">Street:</span>
                        <input type="text" class="form-control" ng-model="settingsModel.Street" placeholder="street"/>
                    </p>
                    <p class="input-group" style="width: 500px">
                        <span class="input-group-addon" style="width: 140px; text-align: left;">Hausnumber:</span>
                        <input type="text" class="form-control" ng-model="settingsModel.Hausnumber" placeholder="hausnumber" />
                    </p>
                    <p class="input-group" style="width: 500px">
                        <span class="input-group-addon" style="width: 140px; text-align: left;">City:</span>
                        <input type="text" class="form-control" ng-model="settingsModel.City" placeholder="city" />
                    </p>
                    <p class="input-group" style="width: 250px">
                        <span class="input-group-addon" style="width: 140px; text-align: left;">State:</span>
                        <input type="text" class="form-control" ng-model="settingsModel.State" placeholder="state" />
                    </p>
                    <p class="input-group" style="width: 300px">
                        <span class="input-group-addon" style="width: 140px; text-align: left;">Zip code:</span>
                        <input type="text" class="form-control" ng-model="settingsModel.ZipCode" placeholder="zip code" />
                    </p>
                    <p class="input-group" style="width: 400px">
                        <span class="input-group-addon" style="width: 140px; text-align: left;">Credit card #:</span>
                        <input type="text" class="form-control" ng-model="settingsModel.CreditCard" placeholder="credi card" />
                    </p>
                    <p class="input-group" style="width: 400px">
                        <span class="input-group-addon" style="width: 140px; text-align: left;">Exp. date:</span>
                        <input type="text" class="form-control" ng-model="settingsModel.ExpirationDate" placeholder="MM/YY" />
                    </p>
                </fieldset>
                <hr style="width: 415px; text-align: left;"/>
                <p>
                    <button type="submit" class="btn btn-info" ng-click="save()">Save</button>
                </p>
            </form>
        </div>
        <div ng-switch-when="success">
            <div style="margin-top: 60px;"></div>
            <h3>Account information updated!</h3>
        </div>
    </div>
</div>

@section scripts
{
    <script src="@Url.Content("~/Binding/Controllers/SettingsController.js")" type="text/javascript"></script>
}